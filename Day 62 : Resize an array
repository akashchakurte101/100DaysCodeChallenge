public class Main1 {
    public static void main(String[] args) {
        int array[] = {0, 2, 1, 0};
        array=resizeArray(array);
        for(int i:array){
            System.out.println(i);
        }
    }

    public static int[] resizeArray(int[] arr) {
        int[] temp=new int[arr.length * 2];

        for(int i=0; i<arr.length; i++){
             temp[i]=arr[i];
            }
          arr=temp;
      return arr;
    }
}
